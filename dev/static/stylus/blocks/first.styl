.first
	margin 0 0 100px 0
	background url(../img/first-bg.png) top right no-repeat
	
	&__title
		font-size 54px
		margin 0 0 40px 0
	
	&__descr
		font-size 18px
		margin 0 0 40px 0
	
	&__action
		margin 0 0 40px 0
		color iconHover
		
		a
			background-color iconHover
			color mainBgColor
			padding 20px 80px
			border-radius 5px
			margin 0 30px 0 0
			display inline-block
			
			i
				margin 0 0 0 15px
	
	&__advantages
		display flex
		flex-wrap wrap
		justify-content space-between
		align-items center
		
		li
			width 48%
			margin 4px 0
		
		p
			font-size 14px
		
		span
			text-transform uppercase
			font-size 20px
			font-weight 900
			display inline-block
			line-height 1.1
			
			&:after
				content ''
				display block
				height 2px
				width 100%
				background-color textColor