.feat
	margin 0 0 100px 0
	
	&__list
		display flex
		justify-content space-between
		align-items stretch
		
		li
			width 20%
			transition all .3s
			padding 60px 40px
			text-align center
			
			h3
				margin 30px 0
				text-transform uppercase
				font-weight 900
			
			img
				opacity 0.5
				transition opacity .3s
				
			
			&:hover
				background-color #fff
				box-shadow 0 0 30px rgba(0,0,0,.1)
				
				img
					opacity 1