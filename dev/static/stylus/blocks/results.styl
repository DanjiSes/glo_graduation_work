.results
	margin 0 0 100px 0
	
	&__title
		text-align center
		margin 0 0 40px 0
	
	&__descr
		text-align center
		max-width 500px
		margin 0 auto 40px auto
	
	&__list
		display flex
		justify-content space-between
		align-items stretch
		flex-wrap wrap
		
		li
			width 32%
			background-color #fff
			padding 40px
			display flex
			margin 0 0 15px 0
			
			&:hover
				
				.text
					
					a
						opacity 1
			
			.text
				margin 0 20px 0 0
				
				h3
					margin 0 0 30px 0
					font-size 17px
				
				&__task
					margin 0 0 20px 0
					
					span:first-child
						color #aeaeb1
						font-size 12px
					
					span:last-child
						font-weight 600
						font-size 14px
				
				&__decision
					margin 0 0 20px 0
					
					span:first-child
						color #aeaeb1
						font-size 12px
					
					span:last-child
						font-size 14px
				
				a
					color iconHover
					font-size 12px
					opacity 0.5
					transition opacity .3s
					
					&:after
						content '\2228'
						display inline
						margin 0 0 0 10px
						
					