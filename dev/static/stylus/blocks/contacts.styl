.contacts
	margin 50px 0
	
	&__wrap
		display flex
		justify-content flex-end
		align-items center
	
	&__mail, &__phone
		color textColor
		margin 0 60px 0 0
	
	&__phone
		font-size 20px
		font-weight 900
	
	&__social
		
		&-item
			display inline-block
			margin 0 15px 0 0 
			
			&:last-child
				margin 0
		
		i
			color iconColor
			transition color .3s
			
			&:hover
				color iconHover