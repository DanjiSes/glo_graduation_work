.header
	display flex
	justify-content space-between
	align-items center
	margin 0 0 100px 0
	
	&__nav
		
		li
			display inline-block
			margin 0 30px 0 0
			
			&:last-child
				margin 0
			
			a
				color navTextColor
				transition color .3s
				position relative
				
				&:after
					content ''
					display block
					position absolute
					background-color iconHover
					height 2px
					width 0%
					bottom -5px
					left 0
					transition width .3s
				
				&:hover
					color navTextHover
					
					&:after
						width 100%
	
	&__search
		display flex
		
		input, button
			border 0
			background-color transparent
			padding 5px